{exp:rss:feed weblog="deals"}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
		xmlns:dc="http://purl.org/dc/elements/1.1/"
		xmlns:atom="http://www.w3.org/2005/Atom">

		<channel>
		{if segment_3 == "state"}
			<title>
				{exp:xml_encode}
					{site_name} Deals | {exp:weblog:entries weblog="locations" limit="1" disable="member_data|trackbacks" status="open" search:location_state="={segment_4}"}{location_state:label}{/exp:weblog:entries}
				{/exp:xml_encode}
			</title>
		{if:else}
			<title>
				{exp:xml_encode}
					{site_name} Deals{if segment_4} | {segment_4_category_name}{/if}
				{/exp:xml_encode}
			</title>
		{/if}
		<link>{site_url}{segment_1}{if segment_3}/{segment_3}{/if}{if segment_4}/{segment_4}{/if}{exp:xml_encode}?utm_source=deals&utm_medium=RSS{/exp:xml_encode}</link>
		<description>The latest {segment_1} from the {site_name}</description>
		<dc:language>{weblog_language}</dc:language>
		<dc:creator>club@newstart.com</dc:creator>
		<dc:rights>Copyright {gmt_date format="%Y"}</dc:rights>
		<pubDate>{gmt_date format="%D, %d %M %Y %H:%i:%s %T"}</pubDate>

		<atom:link href="{site_url}{segment_1}/rss{if segment_3}/{segment_3}{/if}{if segment_4}/{segment_4}{/if}" rel="self" type="application/rss+xml" />
	{if segment_3 == "state"}
	
		{exp:weblog:entries weblog="locations" limit="25" rdf="off" dynamic_start="on" disable="member_data|trackbacks" status="open"  search:location_type="=profit" search:location_state="={segment_4}"}
			{reverse_related_entries orderby="expiration_date" sort="asc"}
				<item>
					<title>{exp:xml_encode protect_entities="yes"}{title}{/exp:xml_encode}</title>
					<link>{path='deals/detail/{categories}{category_url_title}{/categories}'}</link>
					<guid isPermaLink="false">{title_permalink="site/index"}#id:{entry_id}#date:{gmt_entry_date format="%H:%i"}</guid>
					<description>
						<![CDATA[
							{deal_instructions}<br>
							Expires: {expiration_date format="%m/%d/%y"}
						]]>
					</description>
					{categories}<category>{exp:xml_encode protect_entities="yes"}{category_name}{/exp:xml_encode}</category>
					{/categories}
					<dc:date>{gmt_entry_date format="%D, %d %M %Y %H:%i %T"}</dc:date>
				</item>
			{/reverse_related_entries}
		{/exp:weblog:entries}
	
	{if:else}
	
		{exp:weblog:entries weblog="deals" limit="25" rdf="off" dynamic_start="on" show_future_entries="yes" disable="member_data|trackbacks" status="open"{if segment_4} category="{segment_4_category_id}"{/if}}
			<item>
				<title>{exp:xml_encode protect_entities="yes"}{title}{/exp:xml_encode}</title>
				<link>{path='deals/detail/{categories}{category_url_title}{/categories}'}</link>
				<guid isPermaLink="false">{title_permalink="site/index"}#id:{entry_id}#date:{gmt_entry_date format="%H:%i"}</guid>
				<description>
					<![CDATA[
						{deal_instructions}<br>
						Expires: {expiration_date format="%m/%d/%y"}
					]]>
				</description>
				{categories}<category>{exp:xml_encode protect_entities="yes"}{category_name}{/exp:xml_encode}</category>
				{/categories}
				<dc:date>{gmt_entry_date format="%D, %d %M %Y %H:%i %T"}</dc:date>
			</item>
		{/exp:weblog:entries}
	
	{/if}

		</channel>
</rss>
{/exp:rss:feed}