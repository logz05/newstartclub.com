{assign_variable:master_weblog_name="resources|locations|partners|recipes"}
{exp:rss:feed weblog="{master_weblog_name}" show_expired="yes"}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
		xmlns:dc="http://purl.org/dc/elements/1.1/"
		xmlns:atom="http://www.w3.org/2005/Atom">

		<channel>
		
		<title>{exp:xml_encode}{site_name} News{/exp:xml_encode}</title>
		<link>{site_url}{exp:xml_encode}?utm_source=News&utm_medium=RSS{/exp:xml_encode}</link>
		<description>The latest updates from the {site_name}</description>
		<dc:language>{weblog_language}</dc:language>
		<dc:rights>Copyright {gmt_date format="%Y"}</dc:rights>
		<pubDate>{gmt_date format="%D, %d %M %Y %H:%i:%s %T"}</pubDate>

		<atom:link href="{site_url}news/rss" rel="self" type="application/rss+xml" />
		
{exp:weblog:entries weblog="{master_weblog_name}" limit="25" rdf="off" dynamic_start="on" disable="member_data|trackbacks" status="open" show_expired="yes"}
		<item>
			<title>{exp:xml_encode protect_entities="yes"}{title}{/exp:xml_encode}</title>
			<link>{path='{weblog_short_name}/detail/{url_title}'}</link>
			<guid isPermaLink="false">{title_permalink="site/index"}#id:{entry_id}#date:{gmt_entry_date format="%H:%i"}</guid>
			<description>
				<![CDATA[
					{if resource_thumb}
						{exp:ce_img:pair src="{resource_thumb}" max_width="300" max_height="225" crop="yes"}
						<img src="http://newstartclub.com{made}" />
						{/exp:ce_img:pair}
					{/if}
					{resource_description}
					{if event_description}{exp:textile}{exp:xml_encode protect_entities="yes"}{event_description}{/exp:xml_encode}{/exp:textile}{/if}
					{partner_bio}
					{qa_answer}
					{location_description}
				]]>
			</description>
			{categories}<category>{exp:xml_encode protect_entities="yes"}{category_name}{/exp:xml_encode}</category>
			{/categories}
			<dc:date>{gmt_entry_date format="%D, %d %M %Y %H:%i %T"}</dc:date>
		</item>
{/exp:weblog:entries}
		
		</channel>
</rss>
{/exp:rss:feed}