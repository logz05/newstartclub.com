{exp:rss:feed channel="{segment_1}"}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
		xmlns:dc="http://purl.org/dc/elements/1.1/"
		xmlns:atom="http://www.w3.org/2005/Atom">

		<channel>

		<title>{exp:xml_encode}{site_name} Locations{if segment_4} | {exp:channel:entries channel="{segment_1}" limit="1" disable="member_data|trackbacks" status="open" search:location_state="={segment_4}"}{location_state:label}{/exp:channel:entries}{/if}{/exp:xml_encode}</title>
		<link>{site_url}{segment_1}{if segment_3}/{segment_3}{/if}{if segment_4}/{segment_4}{/if}{exp:xml_encode}?utm_source={channel_name}&utm_medium=RSS{/exp:xml_encode}</link>
		<description>The latest {segment_1} from the {site_name}</description>
		<dc:language>{channel_language}</dc:language>
		<dc:creator>club@newstart.com</dc:creator>
		<dc:rights>Copyright {gmt_date format="%Y"}</dc:rights>
		<pubDate>{gmt_date format="%D, %d %M %Y %H:%i:%s %T"}</pubDate>

		<atom:link href="{site_url}{segment_1}/rss{if segment_3}/{segment_3}{/if}{if segment_4}/{segment_4}{/if}" rel="self" type="application/rss+xml" />
		
{exp:channel:entries channel="{segment_1}" limit="25" rdf="off" dynamic_start="on" disable="member_data|trackbacks" status="open" {if segment_4}search:location_state="={segment_4}"{/if}}
		<item>
			<title>{exp:xml_encode protect_entities="yes"}{title}{/exp:xml_encode}</title>
			<link>{path='{segment_1}/detail/{url_title}'}</link>
			<guid isPermaLink="false">{title_permalink="site/index"}#id:{entry_id}#date:{gmt_entry_date format="%H:%i"}</guid>
			<description>
			<![CDATA[
				<dl>
				{if location_address != ""}<dt><strong>Address:</strong></dt>
				<dd>{location_address}<br />{location_city}, {location_state} {location_zip}</dd>{/if}
				{if location_telephone != ""}<dt><strong>Phone:</strong></dt>
				<dd>{location_telephone}</dd>{/if}
				{if location_website != ""}<dt><strong>Website:</strong></dt>
				<dd><a href="http://{location_website}/">{location_website}</a></dd>{/if}
				</dl>
			]]></description>
			{categories}<category>{exp:xml_encode protect_entities="yes"}{category_name}{/exp:xml_encode}</category>
			{/categories}
			<dc:date>{gmt_entry_date format="%D, %d %M %Y %H:%i %T"}</dc:date>
		</item>
{/exp:channel:entries}

		</channel>
</rss>
{/exp:rss:feed}